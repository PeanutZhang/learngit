<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VpActivity">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:tl_indicator_color="#FBC536"
        android:background="#A4AAC5"
        app:tl_indicator_corner_radius="5dp"
        app:tl_indicator_margin_left="2dp"
        app:tl_indicator_margin_right="2dp"
        app:tl_indicator_style="BLOCK"
        app:tl_textsize="15sp"
        android:orientation="vertical"
        app:tl_textUnselectColor="#909193"
        app:tl_textSelectColor="#000000"
        app:tl_indicator_margin_bottom="10dp"
        app:tl_indicator_margin_top="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/vp" />

    <com.example.demo.views.vpager.VViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tl" />
</android.support.constraint.ConstraintLayout>